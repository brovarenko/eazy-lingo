generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id        Int    @id @default(autoincrement())
  english   String
  german    String
  thirdForm String
  perfekt   String
  sets      Set  @relation(fields: [setId], references: [id])
  setId     Int
}

model Set {
  id      Int     @id @default(autoincrement())
  name    String
  words   Word[]
  userId  String
  user    User    @relation(fields: [userId], references: [id])
}

model User {
  id    String @id
  email String @unique
  sets  Set[]
}

